<div id="<%= dom_id book %>">
  <p>
    <strong>Title:</strong>
    <strong><%= t '.title:' %></strong>
    <%= book.title %>
  </p>

  <p>
    <strong>Memo:</strong>
    <strong><%= t '.memo:' %></strong>
    <%= book.memo %>
  </p>

  <p>
    <strong>Author:</strong>
    <strong><%= t '.author:' %></strong>
    <%= book.author %>
  </p>

  <p>
    <strong>Picture:</strong>
    <strong><%= t '.picture:' %></strong>
    <%= image_tag(book.picture_url) if book.picture.present? %>
  </p>

</div>
